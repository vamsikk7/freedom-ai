# Server Configuration
PORT=8080
ENVIRONMENT=development

# Database
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=freedom_ai_management

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=llm-events

# SuperTokens
SUPERTOKENS_CONNECTION_URI=http://localhost:3567
SUPERTOKENS_API_KEY=
SUPERTOKENS_API_DOMAIN=localhost

# Microsoft OAuth (optional)
# Get these from Azure Portal: https://portal.azure.com
# 1. App Registration > Your App > Overview > Application (client) ID
# 2. App Registration > Your App > Certificates & secrets > New client secret
# 3. In Azure Portal, set Redirect URI to: http://localhost:8080/api/v1/auth/callback/microsoft (dev)
#    or https://your-api-domain.com/api/v1/auth/callback/microsoft (production)
MICROSOFT_OAUTH_CLIENT_ID=
MICROSOFT_OAUTH_CLIENT_SECRET=

# Super Admin Email (OTP-based auth, no password needed)
# The first user with this email will be granted super admin privileges
SUPER_ADMIN_EMAIL=admin@freedom-ai.com

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Pricing (per 1k tokens)
PRICING_GPT4_REQUEST=0.03
PRICING_GPT4_RESPONSE=0.06
PRICING_GPT4_TURBO_REQUEST=0.01
PRICING_GPT4_TURBO_RESPONSE=0.03
PRICING_GPT35_TURBO_REQUEST=0.0015
PRICING_GPT35_TURBO_RESPONSE=0.002

# CORS
CORS_ORIGIN=http://localhost:3000

# SMTP (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@freedom-ai.com
